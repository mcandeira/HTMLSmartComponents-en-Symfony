{% extends 'base.html.twig' %}

{% if action == 'listar' %}
    {% set accion = (action ~ ' ' ~ element ~ 'es')|title %}
{% else %}
    {% set accion = (action ~ ' ' ~ element)|title %}
{% endif %}

{% block title %}{{ accion }}{% endblock %}

{% block breadcrumbs %}{% set smart = start('breadcrumbs', {crumb: accion}) %}{#######}{{ include(smart.component, smart.vals) }}{% endblock %}

{% block form %}
    {% if action == 'listar' %}
        {% set smart = start('forms/' ~ element ~ '_' ~ action) %}{#######}{{ include(smart.component, smart.vals) }}
    {% else %}
        {% set smart = start('forms/action_form', {action: action, element: element}) %}{#######}{{ include(smart.component, smart.vals) }}
    {% endif %}
{% endblock %}