<form action="/api/jugador/registrar" method="POST">
    <div class="mb-3">
        <label for="clubSelect" class="form-label">Club</label>
        <select class="form-select" name="club" id="clubSelect" required>
            <option selected>No se ha podido obtener la información</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="playerSelect" class="form-label">Jugador</label>
        <select class="form-select" name="player" id="playerSelect" required>
            <option selected>No se ha podido obtener la información</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salario</label>
        <input type="number" class="form-control" id="salary" aria-describedby="salary" name="salary" required>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>

    <script>
        (() => {

            const clubSelect = document.querySelector('#clubSelect')
            const playerSelect = document.querySelector('#playerSelect')

            smart.fillSelect('/api/club/listar', clubSelect)
            smart.fillSelect('/api/jugador/listar', playerSelect)

        })()
    </script>
</form>